% question

:- indexed question(1,0,0).

question(powered_on, /, [
   description = "",
   prompt = text("Is the printer plugged in and turned on?"),
   question_type = menu_single_choice,
   question_style = listbox,
   choices = ["yes", "no"],
   'rule-display_choices' = [["rule_text", "display_text"]],
   answer_type = text,
   length = 20,
   default = "",
   ask_also = '[]',
   answer_type = text
   ]).

question(symptom, /, [
   description = "",
   prompt = text("What problem are you experiencing?"),
   question_type = menu_single_choice,
   question_style = listbox,
   choices = ["no output", "light output", "no color"],
   'rule-display_choices' = [["rule_text", "display_text"]],
   answer_type = text,
   length = 20,
   default = "",
   ask_also = '[]',
   answer_type = text
   ]).

question(user_email, /, [
   description = "",
   prompt = text("What is your e-mail address?"),
   question_type = fill_in_the_blank,
   question_style = listbox,
   choices = '[]',
   'rule-display_choices' = [["rule_text", "display_text"]],
   answer_type = text,
   length = 50,
   default = "",
   ask_also = '[]',
   answer_type = text
   ]).



