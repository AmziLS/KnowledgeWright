   description = "",
   parameters = [[text("parameter"), text("value")], [text("type"), text("sendmail")], [text("command"), text("/usr/sbin/sendmail -t ")], [text("to"), text("support@company.com")], [text("from"), text(user_email)], [text("subject"), text("No Solution in Support Knowledgebase")], [text("cc"), text("")], [text("bcc"), text("")], [text("message"), text("Known facts:
